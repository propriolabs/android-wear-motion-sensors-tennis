<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv2"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding= "5dp"
    card_view:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_layout"
        android:padding="5dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/session_photo"
            android:src="@mipmap/ic_tennis"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/session_user"
            android:text="Rafa Nadal"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/session_date"
            android:text="April 22"
            android:textSize="10sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/session_photo"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/session_duration"
            android:text="04:27 - 5:00 PM"
            android:textSize="10sp"
            android:layout_below="@+id/session_date"
            android:layout_alignParentRight="true"
            android:gravity="right" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/weather"
            android:text="Weather"
            android:textSize="10sp"
            android:layout_below="@+id/session_duration"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:visibility="gone"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/wind"
            android:text="Wind"
            android:textSize="10sp"
            android:layout_below="@+id/weather"
            android:layout_alignParentRight="true"
            android:gravity="right" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/temperature"
            android:text="Temperature"
            android:textSize="10sp"
            android:layout_below="@+id/wind"
            android:layout_alignParentRight="true"
            android:gravity="right" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/address"
            android:text="Address"
            android:textSize="10sp"
            android:layout_below="@+id/temperature"
            android:layout_alignParentRight="true"
            android:gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/session_strokes"
            android:text="10 strokes"
            android:textSize="12sp"
            android:layout_below="@+id/session_user"
            android:layout_alignStart="@+id/session_user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/session_rallies"
            android:text="43 rallies"
            android:textSize="12sp"
            android:layout_below="@+id/session_strokes"
            android:layout_alignStart="@+id/session_strokes"
            android:visibility="visible"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/session_meanrally"
            android:text="2.3 strokes per rally on average"
            android:textSize="12sp"
            android:layout_below="@+id/session_rallies"
            android:layout_alignStart="@+id/session_rallies"
            android:visibility="visible"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/session_calories"
            android:text="10 calories"
            android:textSize="12sp"
            android:layout_below="@+id/session_meanrally"
            android:layout_alignStart="@+id/session_meanrally"
            android:visibility="visible"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/match"
            android:text="Match or Practice"
            android:textSize="12sp"
            android:layout_below="@+id/session_calories"
            android:layout_alignStart="@+id/session_meanrally"
            android:visibility="visible"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:text="Click me ;)"
            android:id="@+id/button"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>